<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <merge tools:showIn="@layout/activity_card">

        <View
            android:id="@+id/icon_skeleton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/skeleton"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp" />

        <View
            android:id="@+id/name_skeleton"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/icon_skeleton"
            app:layout_constraintTop_toBottomOf="@id/type_skeleton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/skeleton" />

        <View
            android:id="@+id/type_skeleton"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/icon_skeleton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/skeleton" />

        <View
            android:id="@+id/amount_skeleton"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:background="@drawable/skeleton"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </merge>
</layout>