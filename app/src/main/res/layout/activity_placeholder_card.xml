<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/icon_skeleton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/skeleton"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="24dp" />

            <View
                android:id="@+id/name_skeleton"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/icon_skeleton"
                app:layout_constraintTop_toBottomOf="@id/type_skeleton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="100dp"
                android:layout_marginBottom="8dp"
                android:layout_height="16dp"
                android:background="@drawable/skeleton" />

            <View
                android:id="@+id/type_skeleton"
                android:layout_width="50dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/icon_skeleton"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/skeleton" />

            <View
                android:id="@+id/amount"
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:background="@drawable/skeleton"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>