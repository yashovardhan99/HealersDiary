<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.yashovardhan99.core.R" />

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.yashovardhan99.core.utils.ActivityParent.Activity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:cardCornerRadius="0dp"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:importantForAccessibility="no"
                android:padding="2dp"
                android:src="@{activity!=null ? activity.type.icon.drawable : R.drawable.check}"
                android:visibility="@{activity!=null? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/check" />

            <TextView
                android:id="@+id/activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text='@{activity != null ? activity.type.description : R.string.empty}'
                android:textAppearance="@style/subtitle2"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/cities" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{activity.patient.name ?? null}'
                android:textAppearance="@style/subtitle"
                app:layout_constraintStart_toStartOf="@id/activity_type"
                app:layout_constraintTop_toBottomOf="@id/activity_type"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:textAppearance="@style/h2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:amountText="@{activity != null ? activity.amount : 0}"
                android:visibility="@{activity != null ? View.VISIBLE : View.GONE}"
                tools:text="@string/sample_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/subtitle2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amount"
                bind:date="@{activity.time ?? null}"
                tools:text="@tools:sample/date/day_of_week" />

            <include
                layout="@layout/activity_placeholder_card"
                android:id="@+id/skeleton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>